<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="movieModel"
            type="com.krujz.domain.models.MovieItemData" />
    </data>

<androidx.cardview.widget.CardView
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp"
    android:maxHeight="350dp"
    android:minHeight="350dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="60dp"
        android:paddingStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="10dp"
            android:textColor="@color/dark_grey"
            android:text="@{movieModel.title}"
            android:textSize="16dp"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_24" />

            <TextView
                android:id="@+id/recycler_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="5dp"
                android:textColor="@color/dark_grey"
                android:text="@{`` + movieModel.voteAverage}"
                android:textSize="18dp" >
            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:scaleType="fitEnd"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_arrow_right" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="bottom">

        <include layout="@layout/rounded_imageview"/>

        <ProgressBar
            android:id="@+id/recycler_loading_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/blue"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
</layout>
